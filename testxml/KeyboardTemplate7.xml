<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0px"
    android:keyHeight="$defaultHeight$"
    android:verticalGap="0px"
    >

    <Row
        android:keyboardMode="@integer/keyboard_normal"
        android:rowEdgeFlags="top"
        android:keyWidth="15%p"
        android:keyHeight="$row1Height$"
       >
       $row1Keys$
       
    </Row>

    <Row
        android:keyboardMode="@integer/keyboard_sym"
        android:rowEdgeFlags="top"
        android:keyWidth="15%p"
        android:keyHeight="$row1Height$"
       >    
	<Key
    android:keyWidth="13%p"
            android:codes="27"
            android:keyEdgeFlags="left"
            android:keyLabel="Esc" />
    <Key
    android:keyWidth="25%p"
        android:codes="5000"
        android:isRepeatable="true"
        android:keyLabel="◀"
        />
    <Key
        android:codes="5001"
        android:isRepeatable="true"
        android:keyLabel="▼"/>
       
    <Key
        android:codes="5002"
        android:isRepeatable="true"
        android:keyLabel="▲"/>
    <Key
    android:keyWidth="17%p"
        android:codes="5003"
        android:isRepeatable="true"
        android:keyLabel="▶" />
    <Key
        android:keyWidth="15%p"
        android:codes="-15"
        android:keyLabel="SYM" />

    </Row>
    
    <Row
        android:keyWidth = "7.7%p"
        android:keyHeight="$row2Height$"
        >
        $row2Keys$
    </Row>
    <Row
        android:keyWidth = "8.3%p"
        android:keyHeight="$row3Height$"
        >
        $row3Keys$
    </Row>

    <Row
        android:keyWidth = "9%p"
        android:keyboardMode="@integer/keyboard_normal"
        android:keyHeight="$row4Height$"
        >
        $row4Keys$
    </Row>

    <Row
        android:keyWidth = "8.9%p"
        android:keyboardMode="@integer/keyboard_normal"
        android:keyHeight="$row5Height$"
        >
        $row5Keys$
    </Row>


    <Row
        android:keyboardMode="@integer/keyboard_normal"
        android:keyHeight="$row6Height$"
        >
        $row6Keys$
    </Row>

    <Row
        android:keyboardMode="@integer/keyboard_sym"
        android:keyHeight="$row4Height$"
        android:keyWidth ="10%p"
        >
		<Key
            android:codes="126"
            android:keyEdgeFlags="left"
            android:keyLabel="~" />
         <Key
            android:codes="96"
            android:keyLabel="`"/>
        <Key
            android:codes="35"
            android:keyLabel="\#" />
        <Key
            android:codes="92"
            android:keyLabel="\\" />
        <Key
            android:codes="37"
            android:keyLabel="%"
           />
        <Key
            android:codes="36"
            android:keyLabel="$"/>
        <Key
            android:codes="163"
            android:keyLabel="£"/>
                    <Key
            android:codes="176"
            android:keyLabel="°"/>
                    <Key
            android:codes="172"
            android:keyLabel="¬"/>
        
        <Key
        	android:codes="-5"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyLabel="◀" />

    </Row>

    <Row
    	android:keyWidth ="10%p"
        android:keyboardMode="@integer/keyboard_sym"
        android:keyHeight="$row5Height$"
        >
     	<Key
        	android:keyWidth ="20%p"
            android:keyOutputText="@string/for_"
            android:keyLabel="@string/for_" />
        <Key
        	android:keyWidth ="30%p"
            android:keyOutputText="@string/printf"
            android:keyLabel="@string/printf" />
        
        <Key
        	android:keyWidth ="30%p"
            android:keyOutputText="@string/scanf"
            android:keyLabel="@string/scanf" />
        <Key
        	android:keyWidth ="20%p"
            android:codes="-4"
            android:keyEdgeFlags="right"
            android:keyLabel="Enter"
           />

        
    </Row>


    <Row
        android:keyboardMode="@integer/keyboard_sym"
        android:keyHeight="$row6Height$"
        android:keyWidth="15%p"
        >
        <Key
        	android:keyWidth="10%p"
            android:codes="16"
            android:keyEdgeFlags="left"
            android:isModifier="true"
            android:keyLabel="Shft" />
        <Key
	        android:codes="53737"
	        android:keyWidth="20%p"
	        android:isRepeatable="true"
	        android:keyLabel="Sel All"
        />
	    <Key
	        android:codes="53738"
	        android:keyWidth="10%p"
	        android:isRepeatable="true"
	        android:keyLabel="Cut"/>
	    <Key
	        android:codes="53739"
	        android:isRepeatable="true"
	        android:keyLabel="Copy"/>
	    <Key
	        android:codes="53740"
	        android:keyLabel="Paste" />
	    <Key
	        android:codes="53741"
	        android:keyLabel="Undo" />
	    <Key
	        android:codes="53742"
	        android:keyLabel="Redo" />

    </Row>
    

    <Row        
        android:keyHeight="$row7Height$"
        android:rowEdgeFlags="bottom">
        $row7Keys$
    </Row>
</Keyboard>
